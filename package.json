{
  "name": "skale-engine",
  "version": "0.4.2",
  "license": "Apache-2.0",
  "description": "parallel and distributed data processing engine",
  "main": "index.js",
  "scripts": {
    "preinstall": "mkdir -p node_modules && echo 'module.exports = require(\"..\")' > node_modules/skale-engine.js",
    "start": "pf=/tmp/skale-server.pid; test -f $pf && exit 1; bin/server.js -l 0 & echo $! > $pf",
    "stop": "pf=/tmp/skale-server.pid; test -f $pf || exit 1; kill $(cat $pf); rm -f $pf",
    "test": "node_modules/.bin/mocha",
	"pretest": "node_modules/.bin/eslint */*.js test/*/*.js examples/*/*.js",
	"lint": "node_modules/.bin/eslint */*.js test/*/*.js examples/*/*.js"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "os": [
    "!win32"
  ],
  "repository": "skale-me/skale-engine",
  "bugs": {
    "url": "https://github.com/skale-me/skale-engine/issues"
  },
  "keywords": [
    "big data",
    "ETL",
    "distributed",
    "data processing",
    "machine learning",
    "cloud",
    "parallel",
    "cluster",
    "hpc"
  ],
  "author": "Skale team",
  "dependencies": {
    "line-trace": "^1.0.4",
    "node-getopt": "^0.2.3",
    "node-uuid": "^1.4.7",
    "object-sizeof": "^1.0.10",
    "stream-to-array": "^2.3.0",
    "thenify": "^3.2.0",
    "websocket-stream": "^3.0.1",
    "ws": "^1.1.0"
  },
  "devDependencies": {
    "eslint": "^2.7.0",
    "mocha": "^2.2.5"
  },
  "eslintConfig": {
    "rules": {
      "indent": [
        2,
        "tab"
      ],
      "quotes": [
        2,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        2,
        "always"
      ],
      "no-console": 0
    },
    "env": {
      "es6": true,
      "node": true,
	  "mocha": true
    },
    "extends": "eslint:recommended"
  }
}
