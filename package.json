{
  "name": "ugrid",
  "version": "0.0.0",
  "description": "ugrid client and server",
  "main": "index.js",
  "scripts": {
    "start": "cd bin; ./ugrid.js & echo $! >/tmp/ugrid.pid ; sleep 1",
    "pretest": "cd bin; ./ugrid.js > /dev/null & echo $! >/tmp/ugrid.pid ; sleep 1; ./worker.js -n 1 > /dev/null & echo $! >/tmp/workers.pid ; sleep 1",
    "test": "cd test; ./runUnitTest.js 1",
    "posttest": "kill $(cat /tmp/workers.pid); kill $(cat /tmp/ugrid.pid)",
    "stop": "kill $(cat /tmp/ugrid.pid)"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@gitlab.ugrid.net:10022/ugrid/ugrid.git"
  },
  "keywords": [
    "grid",
    "parallel",
    "cluster",
    "hpc"
  ],
  "author": "Luca SAS",
  "dependencies": {
    "body-parser": "^1.9.2",
    "co": "^3.1.0",
    "express": "^4.10.1",
    "node-getopt": "^0.2.3",
    "node-uuid": "^1.4.1",
    "rand-token": "^0.2.1",
    "request": "^2.49.0",
    "thunkify": "^2.1.2",
    "websocket-stream": "^1.1.1",
    "ws": "^0.4.32"
  }
}
